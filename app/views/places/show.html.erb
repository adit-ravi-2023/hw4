<h1><%= @place["name"] %></h1>

<link rel = "stylesheet" href = "https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
<body class="container">

<p>
  <a class= "btn btn-primary p-3" href="/entries/new?place_id=<%= @place["id"] %>">New Entry</a>
</p>

<div class = "row">
<% for entry in @entries %>
  <div class="col-md-4 col-sm-8">
  <h3><%= entry["title"] %></h3>
  <h4 class="secondary-text"><%= entry["occurred_on"] %></h4>
  
  <% if entry.uploaded_image.attached? %>
   <img src="<%= url_for(entry.uploaded_image) %>" class="img-fluid">
  <% else %>
    <img src="<%= entry["image"] %>" class="img-fluid">
  <% end %>
  <a><%= entry["description"] %></a>
  </div>
<% end %>
</div>


<p>
  <a class = "btn btn-primary" href="/places">Back to All Places</a>
</p>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</body>